<%= stylesheet_link_tag 'posts_index', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="post-index">
  <div class="user-container">
    <img src="<%= @user.photo %>" alt="" class="photo">

    <div class="name-posts">
      <div class="name">
        <%= @user.name %>
      </div>
      <div class="posts">
        <p>Number of posts: <%= @user.posts.count %></p>
      </div>
    </div>
  </div>

  <div class="posts-container">
    <% @posts.each do |post| %>
      <div class="post">
        <div class="post-title">
          <%= post.title %>
        </div>
        <div class="post-text">
          <%= post.text %>
        </div>    
        <p class="user-posts-post-comments-likes posts"> Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %> </p>
      </div>
      <div class="comments-for-each-post">
        <% post.comments.each do |comment| %>
          <p>
            <%= User.find(comment.user_id).name %>: <%= comment.text %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>