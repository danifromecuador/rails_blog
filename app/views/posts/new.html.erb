<%= stylesheet_link_tag 'posts_new', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="form-container">
<%= form_with(model: @post, url: user_posts_path(current_user)) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>