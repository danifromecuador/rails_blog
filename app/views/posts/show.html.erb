<%= stylesheet_link_tag 'posts_show', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="post-show-container">
  <div class="post-show">
    <div class="post-by-username">
      <span class="title"><%= @post.title %> by <%= @post.author.name %></span>
      <p class="user-posts-post-comments-likes posts"> Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></p>
    </div>
    <p><%= @post.text %></p>
    <%= button_to 'Like', user_post_likes_path(@user, @post), method: :post, class: "like-btn" %>
  </div>

  <%= link_to 'New Comment', new_user_post_comment_path(@user, @post), class:"new-comment-btn" %>


  <div class="comments">
    <h2>Comments</h2>
    <% @post.comments.each do |comment| %>
      <div class="comment">
        <p><%= comment.user.name %>: <%= comment.text %></p>
      </div>
    <% end %>
  </div>
</div>
